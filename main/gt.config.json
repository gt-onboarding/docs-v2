{
  "locales": ["en", "fr-CA", "ja-JP"],
  "defaultLocale": "en",
  "options": {
    "experimentalCanonicalLocaleKeys": true,
    "jsonSchema": {
      "./docs.json": {
        "composite": {
          "$.navigation.languages": {
            "type": "array",
            "key": "$.language",
            "include": [
              "$..group",
              "$..tab",
              "$..item",
              "$..anchor",
              "$..dropdown"
            ],
            "transform": {
              "$..pages[*]": {
                "match": "^(docs/)?(.*)$",
                "replace": "$1{locale}/$2"
              },
              "$..root": {
                "match": "^(docs/)?(.*)$",
                "replace": "$1{locale}/$2"
              }
            }
          }
        }
      }
    },
    "docsUrlPattern": "/docs/[locale]",
    "docsImportPattern": "/snippets/[locale]",
    "generateRedirects": "./docs.json",
    "experimentalLocalizeStaticImports": true,
    "experimentalLocalizeStaticUrls": true,
    "docsHideDefaultLocaleImport": true,
    "experimentalHideDefaultLocale": true,
    "experimentalAddHeaderAnchorIds": "mintlify",
    "experimentalClearLocaleDirs": true
  },
  "$schema": "https://assets.gtx.dev/config-schema.json",
  "files": {
    "json": {
      "include": ["./docs.json"]
    },    
    "mdx": {
      "include": ["./**/*.mdx"],
      "transform": {
        "match": "^(snippets/|docs/)?(.*)$",
        "replace": "$1{locale}/$2"
      },
      "exclude": ["./docs/[locales]/**/*.mdx", "./snippets/[locales]/**/*.mdx"]
    },
    "js": {
      "include": ["./**/*.jsx"],
      "transform": {
        "match": "^(snippets/|docs/)?(.*)$",
        "replace": "$1{locale}/$2"
      },
      "exclude": ["./docs/[locales]/**/*.jsx", "./snippets/[locales]/**/*.jsx"]
    }
  },
  "customMapping": {
    "ja-JP": {
      "code": "ja"
    }
  }
}
